<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25292e"
    tools:context="beerdroid.oxim.digital.beerdroid.MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="top"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player_one_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="30dp"
            android:textColor="@color/white"
            android:text="0"/>

        <View
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/player_two_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:textColor="@color/white"
            android:text="0"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="100dp"
        android:layout_marginTop="15dp"
        android:text="Player 1"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="15dp"
        android:text="Player 2"
        android:textColor="@color/white"/>

    <View
        android:id="@+id/player_one"
        android:layout_width="36dp"
        android:layout_height="256dp"
        android:layout_gravity="start"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/paddle_player"/>

    <View
        android:id="@+id/player_two"
        android:layout_width="36dp"
        android:layout_height="256dp"
        android:layout_gravity="end"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/paddle_player"/>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:text="Player 1dwa dwa wins"/>

    <ImageView
        android:id="@+id/ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:src="@drawable/ball"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"/>

</FrameLayout>
